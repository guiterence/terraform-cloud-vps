# Exemplo de arquivo de variáveis
# Copie este arquivo para terraform.tfvars e preencha com suas credenciais

# Contabo Credentials
contabo_client_id     = "seu_client_id_aqui"
contabo_client_secret = "seu_client_secret_aqui"
contabo_user          = "seu_usuario_aqui"
contabo_pass          = "sua_senha_aqui"

# Cloudflare Credentials
cloudflare_api_token = "seu_api_token_aqui"
cloudflare_zone_id   = "seu_zone_id_aqui"
domain_name          = "exemplo.com"

# VPS Configuration
vps_name         = "minha-vps"
vps_region       = "EU"
vps_image_id     = "Ubuntu 22.04"
vps_instance_type = "VPS S"
vps_ssh_key      = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... sua_chave_ssh_publica"
vps_root_password = "senha_segura_aqui"

# Tool Configuration
enable_n8n       = true
enable_portainer = true
enable_traefik   = true
enable_supabase  = true
enable_postgres  = true
enable_minio     = true

# Traefik Configuration
traefik_email = "seu_email@exemplo.com"

# Supabase Configuration
supabase_db_password = "senha_do_banco_supabase"

# PostgreSQL Configuration
postgres_password = "senha_postgres_segura"

# MinIO Configuration
minio_root_user     = "minioadmin"
minio_root_password = "senha_minio_segura"
minio_bucket_name   = "terraform-cloud-vps"
minio_service_account_name        = "supabase"
minio_service_account_access_key  = "sua_access_key_supabase"
minio_service_account_secret_key  = "sua_secret_key_supabase"

# SSH Configuration
ssh_private_key_path = "~/.ssh/id_rsa"

# VPS Existente (use se já tiver uma VPS criada)
use_existing_vps = false
existing_vps_ip  = ""  # Exemplo: "123.45.67.89"

# N8N Configuration (MCP - Model Context Protocol)
# Para usar Claude (Anthropic) no N8N, adicione sua API key:
n8n_anthropic_api_key = ""  # Exemplo: "sk-ant-api03-..."

